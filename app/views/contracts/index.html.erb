<h1><%= @character.name %>'s Contracts</h1>

<table>
  <tr>
	<th>Contract Name</th>
	<th>Dots</th>
	<th>Specialty</th>
	<th colspan=3></th>
  </tr>

<% @character.character_contracts.each do |character_contract| %>
  <tr>
	<td><%= h character_contract.contract.name %></td>
	<td><%= h character_contract.dots %></td>
	<td><%= h (character_contract.specialty.blank? ? '<None>' : character_contract.specialty) %></td>
    <td><%= link_to 'Show', character_contract_path(@character, character_contract) %></td>
    <td><%= link_to 'Edit', edit_character_contract_path(@character, character_contract) %></td>
    <td><%= link_to 'Delete', character_contract_path(@character, character_contract), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "New Contract for #{@character.name}", new_character_contract_path(@character) %>
<h1>Editing <%= @character.name %>'s Skill: <%= @skill.name %></h1>
 
<% form_for ([@character,@character_skill], :url => character_skill_path(@character, @character_skill), :html => {:method => :put}) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update Character Skill" %>
<% end %>

<%= link_to 'Show', character_skill_path(@character, @character_skill) %> |
<%= link_to 'Back', character_skills_path(@character) %>


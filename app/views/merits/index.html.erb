<h1><%= @character.name %>'s Merits</h1>

<table>
  <tr>
	<th>Merit Name</th>
	<th>Dots</th>
	<th>Specialty</th>
	<th colspan=3></th>
  </tr>

<% @character.character_merits.each do |character_merit| %>
  <tr>
	<td><%= h character_merit.merit.name %></td>
	<td><%= h character_merit.dots %></td>
	<td><%= h (character_merit.specialty.blank? ? '<None>' : character_merit.specialty) %></td>
    <td><%= link_to 'Show', character_merit_path(@character, character_merit) %></td>
    <td><%= link_to 'Edit', edit_character_merit_path(@character, character_merit) %></td>
    <td><%= link_to 'Delete', character_merit_path(@character, character_merit), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "New Merit for #{@character.name}", new_character_merit_path(@character) %>